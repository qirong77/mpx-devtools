            </view>
            <view class="devtools-main" wx:if="{{ !isCollapsed }}">
                <view class="tree-container" wx:if="{{ visibleNodesWithDisplayName.length > 0 }}">
                    <view wx:for="{{ visibleNodesWithDisplayName }}" wx:key="index" class="tree-node"
