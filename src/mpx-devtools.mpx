                    <view wx:if="{{ !isCollapsed }}" class="status-section" style="margin-left: 4px;">
                        <text class="update-time" bindtap="updateComponentTree">ğŸ•’ åˆ·æ–°</text>
                    </view>
                    <view class="status-section">
