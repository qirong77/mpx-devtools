                            <text class="collapse-toggle-icon">{{ isCollapsed ? 'ğŸ“‹' : 'ğŸ“' }}</text>
                            <text class="collapse-toggle-text">{{ isCollapsed ? 'å±•å¼€' : 'æ”¶èµ·' }}</text>
                        </view>
                    </view>
                </view>
